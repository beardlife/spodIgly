@model IEnumerable<SpodIgly.Models.Genre>
@using SpodIgly.Infrastructure

<nav class="genres-vertical">
    <ul>
        @foreach (var g in Model)
        {
            <li>
                <a href="@Url.Action("List", "Store", new { genrename = g.Name.ToString()})" style="background-image: url(@Url.GenreIconPath(g.IconFilename)); ">
                    @g.Name
                </a>
            </li>
        }
    </ul>
</nav>
